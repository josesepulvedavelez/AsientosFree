<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsientosFree.Views.TransaccionPage"
             Title="Transacciones">

    <VerticalStackLayout Padding="5" Spacing="12">

        <!-- Formulario para ingresar transacción -->
        <Frame CornerRadius="12" Padding="16" HasShadow="True">
            <VerticalStackLayout Spacing="8">

                <Entry x:Name="NoEntry"
                       Placeholder="Numero transaccion" />

                <Picker x:Name="pickerPuc"
                        Title="Elige una cuenta PUC"
                        ItemsSource="{Binding Pucs}"
                        ItemDisplayBinding="{Binding DisplayText}" />

                <Entry x:Name="valorEntry"
                       Placeholder="Valor"
                       Keyboard="Numeric" />

                <HorizontalStackLayout>
                    <RadioButton x:Name="radioDebito"
                                 Content="Debito"
                                 GroupName="Tipo"
                                 IsChecked="True" />
                    <RadioButton x:Name="radioCredito"
                                 Content="Credito"
                                 GroupName="Tipo" />
                </HorizontalStackLayout>

                <Button Text="Agregar Transaccion" Clicked="OnAgregarClicked" />
            </VerticalStackLayout>
        </Frame>

        <!-- Tabla: encabezado -->
        <Grid Padding="10,5,10,0" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>

            <Label Text="No" Grid.Column="0" FontAttributes="Bold" HorizontalTextAlignment="Start" />
            <Label Text="Cuenta" Grid.Column="1" FontAttributes="Bold" HorizontalTextAlignment="Start" />
            <Label Text="Débito" Grid.Column="2" FontAttributes="Bold" HorizontalTextAlignment="End" />
            <Label Text="Crédito" Grid.Column="3" FontAttributes="Bold" HorizontalTextAlignment="End" />
        </Grid>

        <!-- Tabla: filas -->
        <CollectionView x:Name="transaccionList"
                        ItemsSource="{Binding Lista}"
                        HeightRequest="800">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10,5" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="90" />
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding No}" Grid.Column="0" VerticalOptions="Center" HorizontalTextAlignment="Start" />
                        <Label Text="{Binding Cuenta}" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Start" />
                        <Label Text="{Binding Debito}" Grid.Column="2" VerticalOptions="Center" HorizontalTextAlignment="End" />
                        <Label Text="{Binding Credito}" Grid.Column="3" VerticalOptions="Center" HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
