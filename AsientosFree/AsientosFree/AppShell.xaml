<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AsientosFree.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AsientosFree"
    Shell.FlyoutBehavior="Disabled"
    Title="AsientosFree"
    xmlns:views="clr-namespace:AsientosFree.Views">

    <TabBar>
        <ShellContent Title="Inicio" ContentTemplate="{DataTemplate views:Inicio}" Icon="inicio.png" />
        <ShellContent Title="PUC" ContentTemplate="{DataTemplate views:PucPage}" Icon="puc.png" />
        <ShellContent Title="Transacciones" ContentTemplate="{DataTemplate views:TransaccionPage}" Icon="transaccion.png" />
        <ShellContent Title="Balance prueba" ContentTemplate="{DataTemplate views:Balance}" Icon="balance.png" />
        <ShellContent Title="Configuracion" ContentTemplate="{DataTemplate views:Configuracion}" Icon="configuracion.png" />
    </TabBar>

</Shell>
